{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EcommerceShop.AdminApp/EcommerceShop.AdminApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // {
        //     "label": "build",
        //     "type": "shell",
        //     "command": "dotnet clean",
        //     "args": []
        // },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/EcommerceShop.AdminApp/EcommerceShop.AdminApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/EcommerceShop.AdminApp/EcommerceShop.AdminApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}