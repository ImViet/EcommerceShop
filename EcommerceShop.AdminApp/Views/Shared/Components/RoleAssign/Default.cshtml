@using EcommerceShop.Contracts.Dtos.RoleDtos;
@model RoleAssignDto
<div class="card-body">
    <form asp-controller="User" asp-action="AssignRole">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId" />
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Quyền</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                    <tr>
                        <td>@Model.Roles[i].Name</td>
                        <td>
                            <input type="checkbox" asp-for="Roles[i].Selected" />
                            <input type="hidden" asp-for="Roles[i].Id" />
                            <input type="hidden" asp-for="Roles[i].Name" />
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Lưu lại" class="btn btn-primary" />
        </div>
    </form>
</div>

