@using EcommerceShop.Contracts.Dtos.CategoryDtos
@model CategoryAssignDto
<div class="card-body">
    <form asp-controller="Product" asp-action="AssignCategory">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Danh mục</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                    @for (int i = 0; i < Model.Categories.Count; i++)
                    {
                    <tr>
                        <td>@Model.Categories[i].Name</td>
                        <td>
                            <input type="checkbox" asp-for="Categories[i].Selected" />
                            <input type="hidden" asp-for="Categories[i].Id" />
                            <input type="hidden" asp-for="Categories[i].Name" />
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
        <div class="form-group">
            <input type="submit" value="Lưu lại" class="btn btn-primary" />
        </div>
    </form>
</div>