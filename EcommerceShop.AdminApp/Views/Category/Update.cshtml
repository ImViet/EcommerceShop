@using EcommerceShop.Contracts.Dtos.CategoryDtos
@model CategoryUpdateDto
<div class="container-fluid px-4">
    <h1 class="mt-5">Cập nhật loại sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Tổng quan</a></li>
        <li class="breadcrumb-item"><a asp-controller="Category" asp-action="Index">Danh sách loại sản phẩm</a></li>
        <li class="breadcrumb-item active">Cập nhật loại sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <a class="btn btn-outline-success" asp-controller="Category" asp-action="Index">Danh sách</a>
        </div>
    </div>
    <div class="card mb-4">
        @* <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Example
        </div> *@
        <div class="card-body">
            <form id="form-create-category" class="row g-3" asp-controller="Category" asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6" hidden>
                    <label asp-for="CategoryId" for="inputCategoryId" class="form-label">Tên loại sản phẩm</label>
                    <input asp-for="CategoryId" type="text" class="form-control" id="inputCategoryId">
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Name" for="inputName" class="form-label">Tên loại sản phẩm</label>
                    <input asp-for="Name" type="text" class="form-control" id="inputName">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SeoTitle" for="inputStock" class="form-label">SeoTitle</label>
                    <input asp-for="SeoTitle" type="text" class="form-control" id="inputSeoTitle">
                    <span asp-validation-for="SeoTitle" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SeoAlias" for="inputSeoAlias" class="form-label">Seo Alias</label>
                    <input asp-for="SeoAlias" type="text" class="form-control" id="inputSeoAlias">
                    <span asp-validation-for="SeoAlias" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="SeoDescription" for="inputSeoDescription" class="form-label">Mô tả Seo</label>
                    <input asp-for="SeoDescription" type="text" class="form-control" id="inputSeoDescription">
                    <span asp-validation-for="SeoDescription" class="text-danger"></span>
                </div>           
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://cdn.ckeditor.com/ckeditor5/38.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#inputDetails' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
}