@using EcommerceShop.Contracts.Dtos.AuthDtos
@model UserRegisterDto
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-10 pt-lg-0">
                    <form action="#">
                        <div class="login-form">
                            <h4 class="login-title">Đăng ký</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label>Tên đăng nhập*</label>
                                    <input type="text" placeholder="Tên đăng nhập">
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Số điện thoại*</label>
                                    <input type="text" placeholder="Số điện thoại">
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Tên*</label>
                                    <input type="text" placeholder="Tên">
                                </div>
                                <div class="col-md-6 col-12">
                                    <label>Họ*</label>
                                    <input type="text" placeholder="Họ">
                                </div>
                                <div class="col-md-12">
                                    <label>Email*</label>
                                    <input type="email" placeholder="Địa chỉ email">
                                </div>
                                <div class="col-md-7">
                                    <label>Ngày sinh*</label>
                                    <input type="date" placeholder="Mật khẩu">
                                </div>
                                <div class="col-md-6">
                                    <label>Mật khẩu*</label>
                                    <input type="password" placeholder="Mật khẩu">
                                </div>
                                <div class="col-md-6">
                                    <label>Xác nhận mật khẩu*</label>
                                    <input type="password" placeholder="Xác nhận mật khẩu">
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>