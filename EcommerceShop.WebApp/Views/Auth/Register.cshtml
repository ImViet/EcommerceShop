@using EcommerceShop.Contracts.Dtos.AuthDtos
@model UserRegisterDto
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 pt-10 pt-lg-0">
                    <form asp-controller="Auth" asp-action="Register">
                        <div class="login-form">
                            <h4 class="login-title">Đăng ký</h4>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6 col-12 my-2">
                                    <label>Tên đăng nhập*</label>
                                    <input class="my-1" type="text" asp-for="UserName" placeholder="Tên đăng nhập">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12 my-2">
                                    <label>Số điện thoại*</label>
                                    <input class="my-1" asp-for="PhoneNumber" type="text" placeholder="Số điện thoại">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12 my-2">
                                    <label>Tên*</label>
                                    <input class="my-1" asp-for="FirstName" type="text" placeholder="Tên">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12 my-2">
                                    <label>Họ*</label>
                                    <input class="my-1" asp-for="LastName" type="text" placeholder="Họ">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 my-2">
                                    <label>Email*</label>
                                    <input class="my-1" asp-for="Email" type="email" placeholder="Địa chỉ email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-7 my-2">
                                    <label>Ngày sinh*</label>
                                    <input class="my-1" asp-for="DoB" type="date" placeholder="">
                                    <span asp-validation-for="DoB" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 my-2">
                                    <label>Mật khẩu*</label>
                                    <input class="my-1" asp-for="Password" type="password" placeholder="Mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 my-2">
                                    <label>Xác nhận mật khẩu*</label>
                                    <input class="my-1" asp-for="ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>