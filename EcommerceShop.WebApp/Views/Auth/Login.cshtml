@using EcommerceShop.Contracts.Dtos.AuthDtos
@model UserLoginDto
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Product Related</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="login-form">
                            <h4 class="login-title">Đăng nhập</h4>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-lg-12 my-3">
                                    <label>Tên đăng nhập*</label>
                                    <input class="my-1" type="text" asp-for="UserName" placeholder="Tên đăng nhập">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-lg-12">
                                    <label>Mật khẩu</label>
                                    <input class="my-1" type="password" asp-for="Password" placeholder="Mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input type="checkbox" asp-for="RememberMe" id="remember_me">
                                        <label for="remember_me">Ghi nhớ đăng nhập</label>
                                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a asp-controller="Auth" asp-action="Register">Đăng ký ngay</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 pt-5">
                                    <button type="submit" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Đăng nhập</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>